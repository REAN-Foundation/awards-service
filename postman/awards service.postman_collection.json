					"listen": "test",
					"script": {
						"exec": [
							"try {\r",
							"    var jsonRes = pm.response.json();\r",
							"    const data = jsonRes.Data;\r",
							"    for(var i = 0; i < data.length; i++)\r",
							"    {\r",
							"        var role = data[i];\r",
							"        const role_id = role.Name.toUpperCase() + \"_ROLE_ID\";\r",
